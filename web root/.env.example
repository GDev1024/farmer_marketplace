# Grenada Farmer Marketplace - Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DB_HOST=localhost
DB_NAME=grenada_farmers
DB_USER=root
DB_PASS=

# AWS S3 Configuration (Optional - leave empty to use local storage)
AWS_S3_BUCKET=
AWS_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# AWS CloudFront CDN (Optional - for faster image delivery)
AWS_CLOUDFRONT_URL=

# Email Configuration (for future email notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@grenada-farmers.com
SMTP_FROM_NAME=Grenada Farmer Marketplace

# Application Settings
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com

# Security Settings
SESSION_SECURE=true
SESSION_HTTPONLY=true
CSRF_TOKEN_EXPIRE=3600